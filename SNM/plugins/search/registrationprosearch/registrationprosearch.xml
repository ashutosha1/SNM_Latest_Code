<extension version="1.6" type="plugin" group="search" method="upgrade">
	<name>Registrationpro Search</name>
	<license>GPL</license>
	<author>joomlashowroom</author>
	<authorEmail>support@joomlashowroom.com</authorEmail>
	<authorUrl>http://www.joomlashowroom.com</authorUrl>
	<creationDate>July 2014</creationDate>
	<copyright>Joomlashowroom</copyright>
	<version>v.3.1.2</version>
	<description>This plugin is used with registration pro for event searching.</description>
	<files>
		<filename plugin="registrationprosearch">registrationprosearch.php</filename>
	</files>	
	
	<languages>
   		<language tag="en-GB">language/en-GB/en-GB.plg_search_registrationprosearch.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic">					
				<field name="search_limit" type="text" size="5" default="50" label="Search Limit" description="Number of Search items to return"/>																														
			</fieldset>
		</fields>	
	</config>		
</extension>