<?xml version="1.0" encoding="utf-8"?>
<form>
	<config>
		<fields name="default">
			<fieldset name="basic" addfieldpath="/administrator/components/com_obrss/elements/">
				<field name="cache" type="radio" class="btn-group" default="1" label="OBRSS_CACHE"
					   description="OBRSS_CACHE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="cache_time" type="text" size="8" default="3600" label="OBRSS_CACHE_TIME"
					   description="OBRSS_CACHE_TIME_DESC"/>

				<field name="use_global" type="radio" class="btn-group" default="0" label="OBRSS_USEGLOBAL_AUTHOR"
					   description="OBRSS_USEGLOBAL_AUTHOR_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="override_feedauthor" type="radio" class="btn-group" default="0"
					   label="OBRSS_OVERRIDE_AUTHOR" description="OBRSS_OVERRIDE_AUTHOR_DESC">
					<option value="0">JNO</option>
					<option value="1">OBRSS_OVERRIDE_AUTHOR_EMPTY</option>
					<option value="2">OBRSS_OVERRIDE_AUTHOR_ALLCASES</option>
				</field>

				<field name="mail_author" type="text" size="35" default="" label="OBRSS_MAIL_AUTHOR"
					   description="OBRSS_MAIL_AUTHOR_DESC"/>

				<field name="image_file" type="imagelist" directory="/images" default="" label="OBRSS_IMAGE"
					   description="OBRSS_IMAGE_DESC"/>

				<field name="date_format" type="radio" class="btn-group" default="rfc822"
					   label="OBRSS_DATE_FORMAT" description="OBRSS_DATE_FORMAT_DESC">
					<option value="rfc822">OBRSS_RFC2822_FORMAT</option>
					<option value="iso8601">OBRSS_ISO8601_FORMAT</option>
				</field>

				<field name="spacer" type="spacer" default="OBRSS_SITEMAP" label="OBRSS_SITEMAP"
					   description="OBRSS_SITEMAP_DESC"/>

				<field name="frequency" type="list" class="btn-group" default="weekly" label="OBRSS_CHANGE_FREQUENCY"
					   description="OBRSS_CHANGE_FREQUENCY_DESC">
					<option value="always">Always</option>
					<option value="hourly">Hourly</option>
					<option value="daily">Daily</option>
					<option value="weekly">Weekly</option>
					<option value="monthly">Monthly</option>
					<option value="yearly">Yearly</option>
					<option value="never">Never</option>
				</field>
				<field name="priority" type="text" size="4" default="0.5" label="OBRSS_PRIORITY"
					   description="OBRSS_PRIORITY_DESC"/>

				<field name="spacer1" type="spacer" default="OBRSS_GENERAL" label="OBRSS_GENERAL"
					   description="OBRSS_GENERAL_DESC"/>
				<field name="menu_itemid" type="text" size="4" default="0" label="OBRSS_MENU_ITEMID"
					   description="OBRSS_MENU_ITEMID_DESC"/>
				<field name="count" type="text" size="4" default="30" label="OBRSS_COUNT"
					   description="OBRSS_COUNT_DES"/>
				<field name="hidden_time" type="radio" class="btn-group" default="0" label="OBRSS_HIDDEN_TIME"
					   description="OBRSS_HIDDEN_TIME_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="limit_text" type="radio" class="btn-group" default="0" label="OBRSS_LIMIT"
					   description="OBRSS_LIMIT_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="text_length" type="text" size="4" default="20" label="OBRSS_LENGTH_TEXT"
					   description="OBRSS_LENGTH_TEXT_DESC"/>
				<field name="hideimages" type="radio" class="btn-group" default="0" label="OBRSS_SHOWIMAGES"
					   description="OBRSS_SHOWIMAGES_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="resize_img" type="text" size="10" default="0x0" label="OBRSS_RESIZE_IMG"
					   description="OBRSS_RESIZE_IMG_DESC"/>
				<field name="strip_tags" type="textarea" rows="2" cols="30" default="" label="OBRSS_STRIP_TAGS"
					   description="OBRSS_STRIP_TAGS_DESC"/>
				<field name="ads_from" type="list" default="" label="OBRSS_ADS_FROM" description="OBRSS_ADS_FROM_DES">
					<option value="">OBRSS_ATTRIBS_NONE</option>
					<option value="banner">Banners</option>
					<option value="obbaner">obBanners</option>
					<option value="flexbanner">FlexBanner</option>
					<option value="rsbanners">RSBanners</option>
				</field>
				<field name="ads_order" type="list" default="0" label="OBRSS_ADS_ORDER" description="OBRSS_ADS_ORDER_DESC">
					<option value="0">OBRSS_ADS_ORDER_OPTION_1</option>
					<option value="1">OBRSS_ADS_ORDER_OPTION_2</option>
					<option value="2">OBRSS_ADS_ORDER_OPTION_3</option>
				</field>
				<field name="feed_lang" type="language" client="site" label="JFIELD_LANGUAGE_LABEL"
					   description="JFIELD_LANGUAGE_LABEL"/>
				<field name="@spacer" type="spacer" default="" label="" description=""/>
				<field name="offsetrss"
					   type="list" default="1"
					   label="COM_OBRSS_RSSFEED_TIMEZONE_LABEL"
					   description="COM_OBRSS_TIMEZONE_DESC" class="chosen-select">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</form>